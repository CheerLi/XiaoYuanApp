<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppTheme.NoTitleBar" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BackTheme" parent="AppBaseTheme">
        <item name="homeAsUpIndicator">@drawable/nav_back</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="CourseTableSection">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CourseTableRow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="main_footbar_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#898e91</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="setting_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="setting_tips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#777</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>